[server]
scheme = "tcp"                      ;; Accepted: "tcp", "ssl", tls" (See ssl section below for settings)
host = "0.0.0.0"                    ;; Recommended so we don't hit the loopback connection
port = 12345                        ;; Any acceptable port; sudo serve on 843 to serve flash policy connection
max_buffer = 2048

[options]
;;
;; For compatible timezones, see: http://www.php.net/manual/en/timezones.php
;;
default_timezone = "America/New_York"

socket_select_timeout_sec = 0       ;; Recommended
socket_select_timeout_usec = 200000 ;; Recommended, so we don't overload the thread and CPU with selects

[debug]
debug_verbosity = 4                 ;; 0 = silent
                                    ;; 1 = info
                                    ;; 2 = info + warn
                                    ;; 3 = info + warn + error
                                    ;; 4 = super verbose (includes backtraces and such)

[ssl]
local_cert_pem = ""                 ;; Full system path to your PEM certificate
local_cert_passphrase = ""          ;; Leave empty if your certificate has no passphrase
verify_peer = false                 ;; Recommended
allow_self_signed = true            ;; Recommended


